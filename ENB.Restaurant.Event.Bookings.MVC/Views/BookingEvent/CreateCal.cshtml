@model ENB.Restaurant.Event.Bookings.MVC.Models.CreateAndEditBookingEvent
@using ENB.Restaurant.Event.Bookings.Entities;
@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create New Booking event</strong></h2>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Customer" class="control-label card-header col-md-12" style="margin:5px 0px 5px 0px"></label>
                        <select id="drpEmpList" class="form-control" asp-for="CustomerId" asp-items="@(new SelectList(Model.ListCustomers, "Value", "Text"))">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Staff" class="control-label card-header col-md-12" style="margin:5px 0px 5px 0px"></label>
                        <select id="drpStaffList" class="form-control" asp-for="StaffId" asp-items="@(new SelectList(Model.ListStaff, "Value", "Text"))">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="StaffId" class="text-danger"></span>
                    </div>
                </div>                
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Payment_Method" class="control-label card-header col-md-12" style="margin:5px 0px 5px 0px"></label>
                        <select asp-for="Payment_Method" class="form-control" asp-items="Html.GetEnumSelectList<Ref_payment_method>()"></select>
                        <span asp-validation-for="Payment_Method" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Start" class="control-label card-header col-md-12" style="margin: 5px 0px 5px 0px"></label>
                        <input asp-for="Start" class="form-control" value="@ViewBag.EventDate" />
                        <span asp-validation-for="Start" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="End" class="control-label card-header col-md-12" style="margin: 5px 0px 5px 0px"></label>
                        <input asp-for="End" class="form-control" />
                        <span asp-validation-for="End" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EventStatus" class="control-label card-header col-md-12" style="margin:5px 0px 5px 0px"></label>
                        <select asp-for="EventStatus" class="form-control" asp-items="Html.GetEnumSelectList<EventStatus>()"></select>
                        <span asp-validation-for="EventStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Other_details" class="control-label card-header col-md-12" style="margin:5px 0px 5px 0px"></label>
                        <textarea asp-for="Other_details" type="text" class="form-control" rows="3" id="MessageInputField" autofocus></textarea>
                        <span asp-validation-for="Other_details" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group form-check align-middle ">
                        <label class="form-check-label" style="margin-top:10px">
                            <input class="form-check-input" asp-for="AllDay" /> @Html.DisplayNameFor(model => model.AllDay)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group align-middle">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <a asp-action="Index" class="btn btn-info">Back to Calendar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
