@using ENB.Restaurant.Event.Bookings.Entities;
@model ENB.Restaurant.Event.Bookings.MVC.Models.DisplayBookingEvent;

@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Details Booking: @ViewBag.Message</strong></h2>
</div>

<div id="view-all">
    @await Html.PartialAsync("_Details", Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
<div class="row">
    <div class="col-md-6">
        <a asp-action="EditEvent" asp-controller="BookingEvent" asp-route-id="@ViewBag.Id" asp-route-CustomerId="@ViewBag.Idcustm" class="btn btn-info btn-block col-md-2">Edit</a>
    </div>
    <div class="col-md-6">
        <a asp-action="List" asp-route-CustomerId="@ViewBag.Idcustm"  class="btn btn-secondary btn-block col-md-5">Back to List</a>
    </div>
</div>
