@model ENB.Restaurant.Event.Bookings.MVC.Models.CreateAndEditMeal
@using ENB.Restaurant.Event.Bookings.Entities
@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create New Meal for Menu : @ViewBag.Message</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-MenuId="@ViewBag.IdMenu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                        <label asp-for="MealName" class="control-label"></label>
                        </div>
                        <input asp-for="MealName" class="form-control" />
                        <span asp-validation-for="MealName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                        <label asp-for="Dateofmeal" class="control-label"></label>
                        </div>
                        <input asp-for="Dateofmeal" class="form-control" />
                        <span asp-validation-for="Dateofmeal" class="text-danger"></span>
                    </div>
                </div>                
               
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                        <label asp-for="Other_MealDetail" class="control-label"></label>
                        </div>                      
                        <textarea asp-for="Other_MealDetail" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_MealDetail" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



