@model ENB.Restaurant.Event.Bookings.MVC.Models.CreateAndEditMenu
@using ENB.Restaurant.Event.Bookings.Entities

@{
    ViewData["Title"] = "Edit";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Menu</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@ViewBag.Idmenu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Menu_name" class="control-label"></label>
                        </div>
                        <input asp-for="Menu_name" class="form-control" />
                        <span asp-validation-for="Menu_name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Menu_description" class="control-label"></label>
                        </div>
                        <textarea asp-for="Menu_description" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Menu_description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Otherdetails" class="control-label"></label>
                        </div>
                        <textarea asp-for="Otherdetails" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Otherdetails" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



